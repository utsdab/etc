{
    "pattern": {
        "args": {
            "texture_type": "regular",
            "smode": "periodic",
            "tmode": "periodic",
            "texture_format": "pixar",
            "texture_filter": "catmull-rom",
            "resize": "up-",
            "data_type": null,
            "compression": "lossless",
            "compression_level": null
        },
        "rules": {
            "'_i8t' in '%(img_name)s'": {
                "args": {
                    "texture_format": "tiff",
                    "data_type": "byte"
                }
            },
            "'_i16t' in '%(img_name)s'": {
                "args": {
                    "texture_format": "tiff",
                    "data_type": "short"
                }
            },
            "'_f16e' in '%(img_name)s'": {
                "args": {
                    "texture_format": "openexr",
                    "data_type": "half",
                    "compression": "pxr24"
                }
            },
            "'_f32e' in '%(img_name)s'": {
                "args": {
                    "texture_format": "openexr",
                    "data_type": "float",
                    "compression": "pxr24"
                }
            },
            "'%(img_type)s' == 'float' and %(img_depth)d > 16": {
                "args": {
                    "texture_format": "openexr",
                    "data_type": "half",
                    "compression": "pxr24"
                }
            },
            "%(img_atlas)d == True": {
                "args": {
                    "smode": "clamp",
                    "tmode": "clamp"
                }
            }
        }
    },
    "light": {
        "args": {
            "texture_type": "envlatl",
            "smode": null,
            "tmode": null,
            "texture_format": "openexr",
            "texture_filter": "gaussian",
            "resize": null,
            "data_type": null,
            "compression": "pxr24",
            "compression_level": null
        },
        "rules": {
            "'%(node_type)s' == 'PxrDomeLight'": {
                "args": {
                    "texture_type": "envlatl"
                }
            },
            "'%(node_type)s' != 'PxrDomeLight'": {
                "args": {
                    "texture_type": "regular",
                    "resize": "round-"
                }
            }
        }
    },
    "lightfilter": {
        "args": {
            "texture_type": "regular",
            "smode": "black",
            "tmode": "black",
            "texture_format": "openexr",
            "texture_filter": "gaussian",
            "resize": "round-",
            "data_type": "half",
            "compression": "pxr24",
            "compression_level": null
        }
    },
    "imageplane": {
        "args": {
            "texture_type": "regular",
            "smode": "black",
            "tmode": "black",
            "texture_format": "pixar",
            "texture_filter": "catmull-rom",
            "resize": "up",
            "data_type": null,
            "compression": "lossless",
            "compression_level": null
        }
    }
}